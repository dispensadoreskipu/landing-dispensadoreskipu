---
interface Props {
  mapEmbedUrl?: string;
}

const {
  mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d945.6431254399668!2d-100.2658117751398!3d25.7792425476204!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x866293a4c1bbe135%3A0xf718670308c0537b!2sDispensador%20KIPU!5e1!3m2!1ses!2sus!4v1764532269285!5m2!1ses!2sus"
} = Astro.props;

import "../styles/Map.css";
---

<section class="map-section">
  <div class="map-container">
    <div class="map-content">
      <div class="map-text">
        <h2 class="map-title">
          <span class="title-line">VISITA TÚ</span>
          <span class="title-line">DISPENSADOR KIPU</span>
          <span class="title-line">MÁS CERCANO</span>
        </h2>
      </div>
      <div class="map-wrapper">
        <iframe
          src={mapEmbedUrl}
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="google-map"
        ></iframe>
      </div>
    </div>
  </div>
</section>

